#include <iostream>
using namespace std;

int main() {
  int h, d = 2;
  cout << "\nEnter length of triangle's side: ";
  cin >> h;
  cout << endl;
  for (int i = 1; i <= h; i++) {
    for (int j = 1; j < h * 2; j++) {
      if (i <= h * 2 && i >= h - j + 1 && j <= i + h - 1)
        cout << "*";
      else
        cout << " ";
    }
    cout << endl;
  }
  d++;
  int value1;
  cin >> value1;
  return 0;
}
